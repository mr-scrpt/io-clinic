<div class="reviews slider">
	<div class="reviews__inner swiper" data-option="optionCommon">
		<div class="swiper-wrapper">
			{% set inject = {
			parentClass: "reviews__item swiper-slide"
		}%}
			{% for item in reviews.reviews_list %}
				{% include "blocks/reviews/reviews-item.njk" %}
			{% endfor %}
		</div>

	</div>
	<div class="swiper-pagination reviews__pagination"></div>
	<div class="swiper-button-prev reviews__nav reviews__nav_prev"></div>
	<div class="swiper-button-next reviews__nav reviews__nav_next"></div>
</div>